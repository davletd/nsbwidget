<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
	    android:orientation="horizontal" 
	    android:background="@color/white"
	    android:layout_margin="2sp">
	    
	    <ImageView
	        android:id="@+id/nsb_icon"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="4dp"
	        android:layout_marginLeft="10dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/nsb_white" />

	    <TextView android:id="@+id/avvik"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:textSize="15sp"
		        android:layout_weight="1"
		        android:layout_marginTop="12dp"
        		android:layout_marginBottom="4dp"
		        android:textColor="@color/nsb_grey3"
				android:text="Avvik" />
	    
	    <LinearLayout 
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
		    android:background="@drawable/grey_line_bg"
		    android:orientation="horizontal" 
		    android:layout_margin="2sp">
		    <ImageView
		        android:id="@+id/settings"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="6dp"
		        android:src="@drawable/settings_icon" />
	    </LinearLayout>
    </LinearLayout>

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/orange_line_bg"
    android:orientation="vertical" >
	    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal" >
	    
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    
			<TextView android:id="@+id/deviation_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="18sp"
		        android:textColor="@color/nsb_grey4"
				android:text="Tog L3: Buss for tog mellom Oslo S og Jaren" />
			
			<TextView android:id="@+id/deviation_from"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="12sp"
	        	android:layout_marginTop="15dp"
		        android:textColor="@color/nsb_grey3"
				android:text="Fra: 10.05.2014 03:00" />
			
			<TextView android:id="@+id/deviation_to"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="12sp"
	        	android:layout_marginTop="5dp"
		        android:textColor="@color/nsb_grey3"
				android:text="Til: 11.05.2014 12:48" />
		
		</LinearLayout>
	    
	    <ImageView
	        android:id="@+id/deviation_icon"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/train_icon" />
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="vertical" >
	
		<TextView android:id="@+id/deviation_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="16sp"
	        android:typeface="serif"
	       	android:layout_marginTop="10dp"
	        android:textColor="@color/nsb_grey4"
			android:text="@string/deviation_description2" />
		
		<TextView android:id="@+id/deviation_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="14sp"
	        android:typeface="serif"
	       	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey4"
			android:text="@string/deviation_body2" />
		
		<TextView android:id="@+id/txt1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="14sp"
	       	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey4"
			android:text="Gjelder linjer: L3" />
		

		<TextView android:id="@+id/deviation_updated"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="12sp"
        	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey3"
			android:text="Sist oppdatert: 11:20 Fredag 09.05.2014" />

	</LinearLayout>
	</LinearLayout>
</LinearLayout>
</ScrollView>