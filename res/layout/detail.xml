<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_line_bg"
    android:orientation="vertical" >
	    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal" >
	    
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    
			<TextView android:id="@+id/deviation_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="18sp"
		        android:textColor="@color/nsb_grey4"
				android:text="Tog R30: Buss for tog mellom Jaren og Gjøvik" />
			
			<TextView android:id="@+id/deviation_from"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="12sp"
	        	android:layout_marginTop="15dp"
		        android:textColor="@color/nsb_grey3"
				android:text="Fra: 09:00 Lørdag 10.05.2014" />
			
			<TextView android:id="@+id/deviation_to"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:gravity="center_vertical|left"
		        android:textSize="12sp"
	        	android:layout_marginTop="5dp"
		        android:textColor="@color/nsb_grey3"
				android:text="Til: 15:00 Lørdag 10.05.2014" />
		
		</LinearLayout>
	    
	    <ImageView
	        android:id="@+id/deviation_icon"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/train_icon" />
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="vertical" >
	
		<TextView android:id="@+id/deviation_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="16sp"
	        android:typeface="serif"
	       	android:layout_marginTop="10dp"
	        android:textColor="@color/nsb_grey4"
			android:text="@string/deviation_description" />
		
		<TextView android:id="@+id/deviation_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="14sp"
	        android:typeface="serif"
	       	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey4"
			android:text="@string/deviation_body" />
		
		<TextView android:id="@+id/txt1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="14sp"
	       	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey4"
			android:text="Gjelder linjer: R30" />
		

		<TextView android:id="@+id/deviation_updated"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="center_vertical|left"
	        android:textSize="12sp"
        	android:layout_marginTop="20dp"
	        android:textColor="@color/nsb_grey3"
			android:text="Sist oppdatert: 11:20 Fredag 09.05.2014" />

	</LinearLayout>
</LinearLayout>